<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent">

    <Button
	android:id="@+id/connectButton"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="Conectar ao Sentinela" >
	</Button>

<ListView android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/new_devices"></ListView>
<TextView android:layout_height="wrap_content" android:id="@+id/no_devices" android:text="No devices" android:textSize="18sp" android:gravity="center" android:layout_width="fill_parent"></TextView>

</LinearLayout>